<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@android:color/holo_green_light"
    android:clipChildren="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvIdUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgPerson"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tvPerson3"
        android:layout_alignTop="@+id/tvPerson1"
        android:src="@drawable/img_logo" />

    <TextView
        android:id="@+id/tvPerson1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgPerson"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="User" />

    <TextView
        android:id="@+id/tvPerson2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPerson1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imgPerson"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Age" />

    <TextView
        android:id="@+id/tvPerson3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPerson2"
        android:layout_toRightOf="@+id/imgPerson"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Content" />

    <ImageView
        android:id="@+id/imgFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_star_selector" />
</RelativeLayout>